{
  "name": "hold-that-thought",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "author": "Galliart Family",
  "license": "UNLICENSED",
  "_securityNotes": {
    "auditStatus": "9 moderate vulnerabilities (esbuild) - DEV SERVER ONLY",
    "esbuildNote": "GHSA-67mh-4wv8-2f99: esbuild <=0.24.2 allows cross-origin requests to dev server. Does NOT affect production builds. Fix requires Svelte 5 + Vite 6+ migration.",
    "lastAudit": "2025-12-16",
    "resolved": [
      "sharp CVE-2023-4863 (HIGH)",
      "cookie GHSA-pxg6-pf52-xh8x (MODERATE)"
    ]
  },
  "workspaces": [
    "frontend",
    "backend/lambdas/*"
  ],
  "scripts": {
    "test": "vitest run --reporter=verbose",
    "lint": "cd frontend && npm run check:lint -- --max-warnings 0 && npm run check:types",
    "check": "npm run lint && npm run test",
    "cleanup": "bash scripts/cleanup.sh --execute",
    "cleanup:dry": "bash scripts/cleanup.sh --report-only",
    "deploy": "bash backend/scripts/deploy.sh",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "test:e2e": "playwright test",
    "test:load": "artillery run tests/load/comments-load.yml && artillery run tests/load/messages-load.yml && artillery run tests/load/profile-load.yml"
  },
  "devDependencies": {
    "@aws-sdk/client-ses": "^3.953.0",
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^2.1.0",
    "artillery": "^2.0.26",
    "aws-sdk-client-mock": "^4.1.0",
    "vitest": "^2.1.0",
    "workbox-build": "^7.0.0",
    "workbox-window": "^7.0.0"
  },
  "overrides": {
    "cookie": "^0.7.2",
    "sharp": "^0.33.5"
  }
}
